#!/usr/bin/env bash

function colors () {
    # Reset
    RESET='\e[0m'
    RED='\e[0;31m'          # Red
    GREEN='\e[0;32m'        # Green
    YELLOW='\e[0;33m'       # Yellow
    BLUE='\e[0;34m'         # Blue
    PURPLE='\e[0;35m'       # Purple
    CYAN='\e[0;36m'         # Cyan
    WHITE='\e[0;37m'        # White

    # Bold
    BRED='\e[1;31m'         # Red
    BGREEN='\e[1;32m'       # Green
    BYELLOW='\e[1;33m'      # Yellow
    BBLUE='\e[1;34m'        # Blue
    BPURPLE='\e[1;35m'      # Purple
    BCYAN='\e[1;36m'        # Cyan
    BWHITE='\e[1;37m'       # White
}
colors

function msg {
    printf "$BGREEN 0000===--->$RESET $2 $1 $RESET\n"
}

BIN_PATH=/usr/local/bin

function checking-command-exists {
    msg 'CHECKING\t\t command -'$1'- existences' $BCYAN
    # command -v $1 >/dev/null 2>&1
    hash $1 2>&-
}

function check-and-brew-install {
    msg 'CHECKING\t\t whether -'$1'- has been installed' $BCYAN
    brew info $1  > /dev/null 2>&- &&
    
    msg 'PACKAGE\t\t -'$1'- already been installed' $BYELLOW ||
    ( msg 'PACKAGE\t\t -'$1'- not installed' $BRED
    msg 'INSTALL\t\t -'$1'- by brew' $BPURPLE
    brew install $1 $2 > /dev/null 2>&- 
    msg 'LINKING\t\t -'$1'- to system path' $BPURPLE
    brew link $1 --force > /dev/null 2>&-)
}

function check-and-npm-install {
    msg 'CHECKING\t\t whether -'$1'- has been installed' $BCYAN    
    npm list -g --parseable | grep $1 > /dev/null 2>&-  &&
    msg 'PACKAGE\t\t -'$1'- already been installed' $BYELLOW ||
    (msg 'PACKAGE\t\t -'$1'- not installed' $BRED
    msg 'INSTALL\t\t -'$1'- by npm' $BPURPLE
    npm install -g $1 > /dev/null 2>&-  
    )
}

function gem-install {
    msg 'CHECKING\t\t whether gem -'$1'- is installed' $BCYAN
    gem which $1  > /dev/null 2>&- && 
    msg 'GEM\t\t -'$1'- already been installed' $BYELLOW ||
    ( msg 'GEM\t\t -'$1'- not been installed' $BRED
    msg 'INSTALL\t\t gem -'$1'- for you' $BPURPLE
    gem install $1 > /dev/null 2>&-  )
}

function cleanup-command {
    msg 'CHECKING\t\t for command -'$1'-'  $BCYAN
    which $1 | xargs sudo rm -rf
}

function install-brew {
    checking-command-exists brew &&
    msg 'COMMAND\t\t -brew- has been installed' $BYELLOW ||
    ruby -e '$(curl -fsSL https://raw.github.com/mxcl/homebrew/go/install)'
    msg 'UPDATING\t\t -homebrew-...' $BPURPLE
    brew update > /dev/null 2>&- 
}

function check-and-install-git {
    check-and-brew-install git
}
function clean-env {
    msg 'CLEANING\t\t up environment' $BPURPLE
    msg 'REMOVING\t\t system shipped -emacs-' $BPURPLE
    cleanup-command emacs
    cleanup-command emacsclient
    cleanup-command e
}


function install-emacs {
    msg 'INSTALL\t\t -emacs- ...' $BPURPLE
    brew tap | grep phinze  >/dev/null 2>&- &&
    msg 'REPO\t\t -phinze- already been tapped' $BYELLOW ||
    brew tap phinze/homebrew-cask >/dev/null 2>&-
    
    check-and-brew-install brew-cask
    brew cask list | grep emacs  >/dev/null 2>&- &&
    msg 'SOFTWARE\t\t -emacs- already installed' $BYELLOW ||
    (msg "SOFTWARE\t\t -emacs- not install by cask" $BRED
    brew cask alfred link >/dev/null 2>&-
    sudo rm -rf /Applications/Emacs.app ~/Applications/Emacs.app
    export HOMEBREW_CASK_OPTS="--appdir=/Applications"    
    brew cask install emacs)
    msg 'LINKING\t\t -emacs- to system path' $BPURPLE
}

function create-command-line-emacs {
    msg 'CREATING\t\t -emacs- command' $BPURPLE
    sudo rm -f /usr/bin/emacs
    sudo rm -f $BIN_PATH/emacs
    cp emacs-script $BIN_PATH/emacs
    chmod a+x $BIN_PATH/emacs

    msg 'LINKING\t\t commands shipped with emacs to system path' $BPURPLE
    ln -sf $(cask-packages-path emacs)/Emacs.app/Contents/MacOS/bin/* $BIN_PATH/
}

function daemon-emacs() {
    msg 'SETTING\t\t -emacs- to launch at login...' $BPURPLE
    git clone https://github.com/ripple0328/emacs-daemon-osx.git >/dev/null 2>&-
    cd emacs-daemon-osx
    make > /dev/null 2>&-
    cp org.gnu.emacs.plist ~/Library/LaunchAgents
    launchctl load ~/Library/LaunchAgents/org.gnu.emacs.plist > /dev/null 2>&-
    sudo rm -rf /Applications/emacs-client.app
    sudo mv  emacs-client.app /Applications/
    sudo mv e $BIN_PATH/
    sudo chmod a+x $BIN_PATH/e
    cd ..
    rm -rf emacs-daemon-osx
}

function patch-shebang-path() {
    sed -i.bak '1 c\
#\!/usr/bin/env '$2'\
'  $1
rm $1.bak    
}

function cask-packages-path(){
    brew cask info $1 | sed -n 3p | awk '{split($0,a," "); print a[1]}'
}

function emacs-path() {
    cask-packages-path emacs | awk '{print $1"/Emacs.app/Contents/MacOS/Emacs"}'
}

