#!/usr/bin/env bash

pushd `dirname $0` > /dev/null

popd > /dev/null

source ./bin/install-utils

# get permisson at beginning
sudo ls > /dev/null 2>&-

install-brew
git pull
clean-env
install-emacs
create-command-line-emacs
daemon-emacs

source ./bin/install-dependencies

patch-shebang-path $(emacs-path) ruby
msg 'First time you launch emacs, all plugin will install automatically. enjoy!' $BRED
emacs --debug-init

